<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Free Games</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body class="bg-secondary text-white">
  <div class="container mt-4">
    <h1 class="mb-4">Free Games</h1>

    <!-- Search Form -->
    <div class="mb-3">
      <%= form_tag(free_games_path, method: :get, class: "form-inline") do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search by Game Title" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="pagination-container mb-4">
      <%= will_paginate @free_games, previous_label: 'Previous', next_label: 'Next', class: 'pagination justify-content-center' %>
    </div>

    <!-- dropdown menu for genres -->
    <div class="btn-group">
      <button type="button" class="btn btn-primary">Genres</button>
      <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Show genres...</span>
      </button>
      <div class="dropdown-menu">
        <%= link_to "Show All Games", free_games_path, class: "dropdown-item" %>
        <%= link_to "Shooter", free_games_path(genre: 'Shooter'), class: "dropdown-item" %>
        <%= link_to "MMOARPG", free_games_path(genre: 'MMOARPG'), class: "dropdown-item" %>
        <%= link_to "ARPG", free_games_path(genre: 'ARPG'), class: "dropdown-item" %>
        <%= link_to "Strategy", free_games_path(genre: 'Strategy'), class: "dropdown-item" %>
        <%= link_to "MMORPG", free_games_path(genre: 'MMORPG'), class: "dropdown-item" %>
        <%= link_to "Fighting", free_games_path(genre: 'Fighting'), class: "dropdown-item" %>
        <%= link_to "Action RPG", free_games_path(genre: 'Action RPG'), class: "dropdown-item" %>
        <%= link_to "Battle Royale", free_games_path(genre: 'Battle Royale'), class: "dropdown-item" %>
        <%= link_to "MOBA", free_games_path(genre: 'MOBA'), class: "dropdown-item" %>
        <%= link_to "Sports", free_games_path(genre: 'Sports'), class: "dropdown-item" %>
        <%= link_to "Racing", free_games_path(genre: 'Racing'), class: "dropdown-item" %>
        <%= link_to "Card Game", free_games_path(genre: 'Card Game'), class: "dropdown-item" %>
        <%= link_to "MMO", free_games_path(genre: 'MMO'), class: "dropdown-item" %>
        <%= link_to "Social", free_games_path(genre: 'Social'), class: "dropdown-item" %>
        <%= link_to "Fantasy", free_games_path(genre: 'Fantasy'), class: "dropdown-item" %>
      </div>
    </div>

    <div class="row">
      <% @free_games.each do |free_game| %>
        <div class="col-md-4">
          <div class="card mb-4 bg-dark text-white">
            <div class="card-body">
              <h5><%= link_to free_game.title, free_game_path(free_game), class: "text-reset card-title" %></h5>
              <a href="<%= free_game_path(free_game) %>">
                <img src="<%= free_game.thumbnail %>" class="card-img-top" alt="<%= free_game.title %>">
              </a>
              <h6><%= free_game.publisher %><h6>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="pagination-container mb-4">
      <%= will_paginate @free_games, previous_label: 'Previous', next_label: 'Next', class: 'pagination justify-content-center' %>
    </div>
  </div>


  <!-- Javascript for bootstrap -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script>
    $(document).ready(function() {
      // Initialize Bootstrap dropdowns here
      $('.dropdown-toggle').dropdown();
    });
  </script>

  <script>
    $(document).on('click', '.dropdown-toggle', function() {
      // Handle the click event for dropdowns
    });
  </script>
</body>
</html>
