<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">


  <div class="container bg-dark text-white">
    <h1 class="mt-4">Game Summaries</h1>

    <!-- Search Form -->
    <div class="mb-3">
      <%= form_tag(game_summaries_path, method: :get, class: "form-inline") do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search by Game Title" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="pagination-container mb-4">
      <%= will_paginate @game_summaries, previous_label: 'Previous', next_label: 'Next', class: 'pagination justify-content-center' %>
    </div>

    <!-- Table showing data -->
    <table class="table table-striped mt-4">
      <thead>
        <tr>
          <th>Title</th>
          <th>Summary</th>
        </tr>
      </thead>
      <tbody>
        <% @game_summaries.each do |game_summary| %>
          <tr>
            <td><%= game_summary.summary_game_title %></td>
            <td><%= game_summary.game_summary %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Pagination -->
    <div class="pagination-container mb-4">
      <%= will_paginate @game_summaries, previous_label: 'Previous', next_label: 'Next', class: 'pagination justify-content-center' %>
    </div>
  </div>
